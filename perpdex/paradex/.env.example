# Paradex API Configuration

# Environment: testnet or mainnet
PARADEX_ENVIRONMENT=testnet

# Ethereum L1 Wallet Address (required for Paradex authentication)
PARADEX_L1_ADDRESS=0xYourEthereumAddressHere

# Ethereum L1 Private Key (required for signing transactions)
# WARNING: Keep this secure! Never commit to version control!
PARADEX_L1_PRIVATE_KEY=your_private_key_here

# Optional: Paradex API Key (if using API key authentication)
# PARADEX_API_KEY=your_api_key_here
# PARADEX_API_SECRET=your_api_secret_here

# ===================================================
# Delta Neutral Strategy Configuration
# ===================================================

# ApeX API Configuration (for delta neutral with Paradex)
APEX_API_KEY=your_apex_key_here
APEX_API_SECRET=your_apex_secret_here
APEX_API_PASSPHRASE=your_apex_passphrase_here

# Position Size Configuration
DEFAULT_POSITION_SIZE_BTC=0.001  # Start small for testing
MAX_POSITION_SIZE_BTC=0.01       # Maximum position size

# Funding Rate Threshold
MIN_FUNDING_DIFF=0.005  # Minimum 0.005% funding rate difference to enter

# JIT Strategy Timing
ENTRY_MINUTES_BEFORE_FUNDING=30  # Enter 30 minutes before funding
EXIT_MINUTES_AFTER_FUNDING=5     # Exit 5 minutes after funding
